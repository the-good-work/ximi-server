              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "room": {
                        "type": "string",
                        "example": "<room_name>"
                      },
                      "participants": {
                        "type": "number",
                        "example": 2
                      }
                    }
                  },
                  "xml": {
                    "name": "main"
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "room": {
                        "type": "string",
                        "example": "<room_name>"
                      },
                      "participants": {
                        "type": "number",
                        "example": 2
                      }
                    }
                  },
                  "xml": {
                    "name": "main"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
